<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/sai_logo"
        android:contentDescription="@null"  />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bgImage"
        android:layout_alignTop="@+id/bgImage"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:text="City" 
        android:textColor="#E9C573">
        
        

        <requestFocus />
    </EditText>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/bgImage"
        android:layout_alignTop="@+id/editText1"
        android:layout_marginRight="20dp"
        android:entries="@array/strArr" 
        android:textColor="#E9C573"/>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText1"
        android:layout_below="@+id/spinner1"
        android:layout_marginTop="40dp"
        android:ems="10" 
        android:textColor="#F7E9E9"/>

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/spinner1"
        android:layout_alignTop="@+id/editText2"
        android:src="@drawable/calendaricon" />

    <Button
        android:id="@+id/faci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bgImage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:text="Save" 
        android:background="#E9C573"/>

</RelativeLayout>
